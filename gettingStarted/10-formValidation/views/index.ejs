<html>
<head>
    <title>User Lists</title>
</head>
<body>
    <h1><%= title %></h1>
    <main>
        <%if(locals.users){%>
            <%users.forEach(user => {%>
                <div>
                   Id: <%=user.id%>  Name: <%=user.firstName%> <%=user.lastName%> Email: <%=user.email%> Age: <%=user.age%> Bio: <%=user.bio%>
                   <a href="/<%=user.id%>/update">Update user</a>
                </div>
                <form action="/<%=user.id%>/delete" method="post">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete the user?')">Delete User</button>
                </form>
            <%})%>
        <%}%>
    </main>
    <a href="/create">Create a user</a>
</body>
</html>